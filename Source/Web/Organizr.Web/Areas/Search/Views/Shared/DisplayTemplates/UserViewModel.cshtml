@model Organizr.Web.Areas.Search.ViewModels.UserViewModel

<div class="row search-user">
    <div class="col-md-6">
        <h3>
            <img src="@Model.ImageSrc" width="35px" height="35px"/>
            <a href="/Users/@Model.Id">@Model.FirstName @Model.LastName</a>
        </h3>
    </div>
    <div class="col-md-2">
        <a href="/SendFriendRequest/@this.ViewBag.SearcherId/@Model.Id" style="margin-top: 10px;">Send friend request</a>
    </div>
</div>

